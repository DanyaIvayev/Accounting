        </activity>
        <activity
            android:name=".DescriptionActivity"
            android:label="@string/title_activity_description" >
        </activity>
        <activity
            android:name=".OperationActivity"
            android:label="@string/title_activity_operation" >
        </activity>
        <activity
            android:name=".AddOperationActivity"
            android:label="@string/title_activity_add_operation" >
